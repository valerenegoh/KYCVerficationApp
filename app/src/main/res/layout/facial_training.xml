<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FacialRecognition.Training">

    <com.example.asus.remotekyc.FacialRecognition.Tutorial3View
        android:id="@+id/tutorial3_activity_java_surface_view"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="35dp" />

    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignTop="@id/tutorial3_activity_java_surface_view"
        android:layout_toRightOf="@id/tutorial3_activity_java_surface_view"
        android:layout_toEndOf="@id/tutorial3_activity_java_surface_view"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:src="@drawable/user_image"
        android:contentDescription="image preview" />

    <ToggleButton
        android:id="@+id/capture"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tutorial3_activity_java_surface_view"
        android:layout_alignRight="@+id/imagePreview"
        android:layout_alignEnd="@+id/imagePreview"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="10dp"
        android:checked="false"
        android:textOff="capture"
        android:textOn="capturing"
        android:background="@color/yellow"
        android:textAllCaps="false"/>
</RelativeLayout>